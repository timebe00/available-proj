<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>작업 항목 확인</title>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/quill-image-resize-module@3.0.0/image-resize.min.js"></script>

    <script src="/common/vander/jquery.js"></script>

    <script src="/common/vander/axios.js"></script>
    <script src="/common/js/senderAxios.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th,
        td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }

        th {
            background-color: #f5f5f5;
        }

        td select {
            padding: 4px;
            font-weight: bold;
        }

        select.status {
            background-color: #e0f7fa;
            border: 1px solid #00acc1;
            color: #006064;
            width: 100px;
        }

        .pagination {
            display: flex;
            justify-content: center;
            gap: 8px;
        }

        .pagination button {
            padding: 6px 12px;
            border: 1px solid #ccc;
            background-color: white;
            cursor: pointer;
        }

        .pagination button.active {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

        .task-name {
            width: 50%;
        }

        .deliverable {
            width: 10%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .important {
            border: 2px solid red;
            background-color: #ffe6e6;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 2000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-close {
            position: absolute;
            top: 12px;
            right: 20px;
            font-size: 24px;
            cursor: pointer;
        }

        .hover_line:hover {
            border: 2px solid rgb(0, 217, 255);
            background-color: #e6fffd;
        }
    </style>
</head>

<body>
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h1>작업 항목 확인</h1>
        <div>
            <a href="/dd684590eb0244c0871d6c7abf734b61/broker/write"
                style="padding: 10px 16px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px;">작성하기</a>
            <a href="javascript:changePrice()"
                style="padding: 10px 16px; background-color: #000000; color: white; text-decoration: none; border-radius: 4px;">단가
                적용하기</a>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Best</th>
                <th>At Least</th>
                <th class="task-name">작업명</th>
                <th class="deliverable">산출물</th>
                <th>완료 여부</th>
                <th>주문자 단가</th>
                <th>작업자 단가</th>
                <th>단가 노출 여부</th>
            </tr>
        </thead>
        <tbody id="taskTableBody">

        </tbody>
    </table>
    <!-- <div class="pagination">
        <button class="active">1</button>
        <button>2</button>
        <button>3</button>
    </div> -->

    <!-- 작업 보기 모달 -->
    <div id="viewModal" class="modal">
        <div class="modal-content">
            <span class="modal-close" onclick="closeViewModal()">&times;</span>
            <div id="viewModalBody">불러오는 중...</div>
        </div>
    </div>
</body>

</html>

<script>
    var priceObj = {};
    var quill;

    function closeViewModal() {
        document.getElementById('viewModal').style.display = 'none';
        document.getElementById('viewModalBody').innerHTML = '불러오는 중...';
    }

    function allowOnlyNumbersAndComma(event) {
        const charCode = (event.which) ? event.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57) && charCode !== 44) {
            event.preventDefault();
            return false;
        }
        return true;
    }

    // ✅ 동적으로 생성된 항목에 이벤트 다시 바인딩
    function attachDynamicEvents() {
        $(".status").off().on("change", function () {
            const status = $(this).val();
            const order_idx = $(this).closest("tr").data("order_idx");

            senderAxios.callAxios("/dd684590eb0244c0871d6c7abf734b61/broker/changeStatus", "post", {
                status,
                order_idx
            });
        });

        $(".open-view-modal").off().on("click", function (e) {
            e.preventDefault();
            const orderIdx = $(this).data('order-idx');

            $('#viewModal').show();
            $('#viewModalBody').load(`/dd684590eb0244c0871d6c7abf734b61/broker/view?order_idx=${orderIdx}`);
        });

        $("input[name='order_price'], input[name='work_price']").off().on("input", function () {
            const row = $(this).closest("tr");
            addChangePrice(row);
        });

        $("input[name='priceShow']").off().on("change", function () {
            const row = $(this).closest("tr");
            addChangePrice(row);
        });
    }

    function addChangePrice(row) {
        const order_idx = $(row).data("order_idx");
        const order_price = $(row).find("input[name='order_price']").val();
        const work_price = $(row).find("input[name='work_price']").val();
        const price_show = $(row).find("input[name='priceShow']").is(":checked") ? "Y" : "N";

        priceObj["order_" + order_idx] = {
            order_idx,
            order_price,
            work_price,
            price_show
        };
    }

    function changePrice() {
        const keys = Object.keys(priceObj);
        for (let key of keys) {
            const item = priceObj[key];
            const row = $("#taskTableBody").find("tr[data-order_idx='" + item.order_idx + "']");
            if (item.order_price) {
                const formatted = Number(item.order_price.replaceAll(",", "")).toLocaleString("ko-KR");
                $(row).find("input[name='order_price']").val(formatted);
                item.order_price = formatted;
            }
            if (item.work_price) {
                const formatted = Number(item.work_price.replaceAll(",", "")).toLocaleString("ko-KR");
                $(row).find("input[name='work_price']").val(formatted);
                item.work_price = formatted;
            }
        }

        senderAxios.callAxios("/dd684590eb0244c0871d6c7abf734b61/broker/changePrice", "post", {
            priceObj: JSON.stringify(priceObj)
        }).then(() => priceObj = {});
    }

    // ✅ 테이블 새로고침 함수
    function reloadTableBody() {
        $("#taskTableBody").load("/dd684590eb0244c0871d6c7abf734b61/broker/listTable", function () {
            attachDynamicEvents();
        });
    }

    // ✅ 최초 실행 시
    $(document).ready(function () {
        attachDynamicEvents();
        reloadTableBody();

        // ✅ 30초마다 테이블 새로고침
        setInterval(reloadTableBody, 30000);
    });

    $(document).on("click", "#viewModal", function (e) {
        const $viewModalBody = $('#viewModalBody');
        if ($viewModalBody.is(':visible') && e.target.id === 'viewModal') {
            closeViewModal();
        }
    })
</script>