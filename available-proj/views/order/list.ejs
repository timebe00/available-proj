<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>작업 항목 확인</title>

    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/quill-image-resize-module@3.0.0/image-resize.min.js"></script>

    <script src="/common/vander/jquery.js"></script>

    <script src="/common/vander/axios.js"></script>
    <script src="/common/js/senderAxios.js"></script>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th,
        td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }

        th {
            background-color: #f5f5f5;
        }

        td select {
            padding: 4px;
            font-weight: bold;
        }

        select.status {
            width: 130px;
        }

        .pagination {
            display: flex;
            justify-content: center;
            gap: 8px;
        }

        .pagination button {
            padding: 6px 12px;
            border: 1px solid #ccc;
            background-color: white;
            cursor: pointer;
        }

        .pagination button.active {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

        .task-name {
            width: 50%;
        }

        .deliverable {
            width: 10%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .important {
            border: 2px solid red;
            background-color: #ffe6e6;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 2000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-close {
            position: absolute;
            top: 12px;
            right: 20px;
            font-size: 24px;
            cursor: pointer;
        }

        .hover_line:hover {
            background-color: #f3f7fe;
        }
    </style>
</head>

<body>
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h1>작업 항목 확인</h1>
        <div>
            <a href="/5521ed612b874a198fc98c71fbcee437/order/write"
                style="padding: 10px 16px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px;">작성하기</a>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Best</th>
                <th>At Least</th>
                <th class="task-name">작업명</th>
                <th class="deliverable">산출물</th>
                <th>완료 여부</th>
                <th>단가</th>
            </tr>
        </thead>
        <tbody id="taskTableBody">

        </tbody>
    </table>
    <!-- <div class="pagination">
        <button class="active">1</button>
        <button>2</button>
        <button>3</button>
    </div> -->

    <!-- 작업 보기 모달 -->
    <div id="viewModal" class="modal">
        <div class="modal-content">
            <span class="modal-close" onclick="closeViewModal()">&times;</span>
            <div id="viewModalBody">불러오는 중...</div>
        </div>
    </div>
</body>

</html>

<script>
    var quill;

    function closeViewModal() {
        document.getElementById('viewModal').style.display = 'none';
        document.getElementById('viewModalBody').innerHTML = '불러오는 중...';
    }

    // ✅ 동적으로 생성된 항목에 이벤트 다시 바인딩
    function attachDynamicEvents() {
        $(".status").off().on("change", function () {
            const status = $(this).val();
            const order_idx = $(this).closest("tr").data("order_idx");

            if (status == "03" || status == "05") {
                $(this).css("background-color", "#ee293b");
                $(this).css("color", "#ffffff");
            } else {
                $(this).css("background-color", "")
                $(this).css("color", "");
            }

            senderAxios.callAxios("/5521ed612b874a198fc98c71fbcee437/order/changeStatus", "post", {
                status,
                order_idx
            });
        });

        $(".show_view_model").off().on("click", function (e) {
            e.preventDefault();
            const orderIdx = $(this).data('order-idx');

            $('#viewModal').show();
            $('#viewModalBody').load(`/5521ed612b874a198fc98c71fbcee437/order/view?order_idx=${orderIdx}`);
        });
    }

    // ✅ 테이블 새로고침 함수
    function reloadTableBody() {
        $("#taskTableBody").load("/5521ed612b874a198fc98c71fbcee437/order/listTable", function () {
            attachDynamicEvents();
        });
    }

    // ✅ 최초 실행 시
    $(document).ready(function () {
        attachDynamicEvents();
        reloadTableBody();

        // ✅ 30초마다 테이블 새로고침
        setInterval(reloadTableBody, 30000);
    });

    $(document).on("click", "#viewModal", function (e) {
        const $viewModalBody = $('#viewModalBody');
        if ($viewModalBody.is(':visible') && e.target.id === 'viewModal') {
            closeViewModal();
        }
    })
</script>