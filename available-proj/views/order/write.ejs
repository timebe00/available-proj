            width: auto;
            transform: scale(1.2);
            cursor: pointer;
            margin: 0;
        }

        #editor {
            height: 700px;
            background: white;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .file-links {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .file-link-item {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .file-link-item input[type="text"] {
            flex: 1;
            padding: 8px;
            font-size: 14px;
        }

        .file-link-item button {
            width: 35px;
            height: 38px;
            margin: 0;
            padding: 0;
            background-color: #dc3545;
            border: none;
            color: white;
            cursor: pointer;
            border-radius: 4px;
            font-size: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .file-link-item button:hover {
            background-color: #a71d2a;
        }

        button {
            width: 120px;
            padding: 10px;
            font-size: 16px;
            background-color: #007bff;
            border: none;
            color: white;
            cursor: pointer;
            border-radius: 4px;
            margin-top: 10px;
            align-self: center;
        }

        button:hover {
            background-color: #0056b3;
        }

        #addFileLinkBtn {
            width: auto;
            background-color: #28a745;
            margin-top: 5px;
            padding: 6px 12px;
            font-size: 14px;
            border-radius: 4px;
        }

        #addFileLinkBtn:hover {
            background-color: #1e7e34;
        }

        #goMenuBtn {
            background-color: #6c757d;
        }

        #goMenuBtn:hover {
            background-color: #5a6268;
        }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 10px;
